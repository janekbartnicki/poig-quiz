<UserControl x:Class="Quiz.Views.AuthorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" 
                   Text="Informacje o aplikacji" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="20" 
                   HorizontalAlignment="Center"/>

        <!-- Treść informacyjna -->
        <StackPanel Grid.Row="1" 
                    Margin="40,20,40,20">

            <TextBlock Text="Instrukcja:" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,30,0,10"/>

            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,10">
                1. Wybierz opcję "Graj", aby rozpocząć quiz.
            </TextBlock>

            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,10">
                2. Wybierz plik quizu z komputera.
            </TextBlock>

            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,10">
                3. Odpowiedz na pytania, klikając wybraną odpowiedź.
            </TextBlock>

            <TextBlock TextWrapping="Wrap" 
                       Margin="0,0,0,10">
                4. Po zakończeniu quizu sprawdź swój wynik.
            </TextBlock>
        </StackPanel>

        <!-- Przycisk powrotu -->
        <Button Grid.Row="2" 
                Content="Powrót do menu" 
                Command="{Binding NavigateHomeCommand}" 
                HorizontalAlignment="Center" 
                Margin="20" 
                Padding="15,5" 
                Background="#3498db" 
                Foreground="White" 
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>