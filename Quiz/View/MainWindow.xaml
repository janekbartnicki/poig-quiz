<Window x:Class="Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Quiz.ViewModels"
        xmlns:views="clr-namespace:Quiz.Views"
        Title="Quiz" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <views:MenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:QuizViewModel}">
            <views:QuizView/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}"/>
</Window>